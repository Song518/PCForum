@model PCForum.Models.Comment

@{
    ViewData["Title"] = "Add a Comment";
}

<h2>Add a Comment</h2>

<form asp-controller="Comments" asp-action="Create" method="post">
    @Html.AntiForgeryToken() <!-- CSRF protection -->
    <!-- Ensure DiscussionId is included -->
    <input type="hidden" asp-for="DiscussionId" />

    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!-- Back to Comments Button -->
<a asp-controller="Comments" asp-action="Index" asp-route-discussionId="@Model.DiscussionId" class="btn btn-secondary mt-3">
    Back to Comments
</a>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
